#include "Camera.h"
#include "Graphic.h"

using namespace DavinciEngine;

Camera::Camera(const Camera& camera) : Transform(camera)
{
}

Camera::Camera() : Transform()
{
}

void Camera::ApplyMatrix()
{
	OpenGL::GetInstance()->Scale(scale);
	OpenGL::GetInstance()->Translate(position * -1.0f);
	OpenGL::GetInstance()->Rotate(rotation, 0, 0, 1);
}